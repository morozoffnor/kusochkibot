{
    "compilerOptions": {
        "module": "Node16",
        "esModuleInterop": true,
        "outDir": "pub/",
        "rootDir": "src/",
        "target": "ES2019",
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "incremental": true,
        "noErrorTruncation": true,
        "stripInternal": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true
    },
    "include": ["src/"]
}